<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ViewPain">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:text="PAS VIEW HISTORY"
            android:textColor="#ffff"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. SELECT DATE"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/PainDateEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Date" />



        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. AFFECTED BODY AREA"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id = "@+id/viewBodyPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "BODY PART"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            />



        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. INTENSITY OF PAIN"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/viewPainSeekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:max="10"
            android:progress="3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. CONTEXT"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/viewPainContext"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/input_rounded"
            android:gravity="center"
            android:inputType="textPersonName" />



        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. WHAT HELPED"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/viewPainWhatHelped"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/input_rounded"
            android:gravity="center"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnGoHome"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_rounded"
            android:text="HOME"
            android:textColor="@color/buttonText" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>